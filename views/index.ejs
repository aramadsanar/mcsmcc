<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>jQuery Mobile: Theme Download</title>
	<link rel="stylesheet" href="themes/pertemuan2.min.css" />
	<link rel="stylesheet" href="themes/jquery.mobile.icons.min.css" />
	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile.structure-1.4.5.min.css" />
	<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
	<script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
	<script>
		//javascript
		function signIn(){
			var user = document.getElementById("username").value;
			alert(user);
		}

		// $ -> selector (JQuery)
		$(function(){
			$('#loginForm').submit(function(e){
				var user = $('#username').val();
				var pass = $('#password').val();
				
				e.preventDefault(); //biar bisa sign in
				
				if(user=="admin" && pass=="admin"){
					//pindah page
					window.location.href = "BuyTickets.html";
				}
				else{
					alert("Wrong username or password!");
				}
			});
		});
	</script>
</head>
<body>
	<div data-role="page" data-theme="a">
		<div data-role="header" data-position="inline">
			<h1>Login Form</h1>
		</div>
		<div data-role="content" data-theme="a">
			<form id="loginForm" data-ajax="false">
				<label for="username">Username:</label>
				<input type="text" id="username" value="" required>
				<label for="password">Password:</label>
				<input type="password" id="password" value="" required>
				<input type="submit" value="Sign In" data-theme="a">
			</form>
		</div>
	</div>
</body>
</html>